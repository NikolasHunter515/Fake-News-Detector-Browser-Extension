{
  "manifest_version": 3,
  "short_name": "Fake News Extension",
  "name": "Fake News Browser Extension",
  "version":"1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico"
    }
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }]
}
